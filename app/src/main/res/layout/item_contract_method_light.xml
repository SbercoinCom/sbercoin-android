<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/list_item_background_selector_light"
    android:clickable="true">

    <org.sbercoin.wallet.utils.FontTextView
        android:id="@+id/method_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/about"
        android:textColor="@color/bottom_nav_view_item_color"
        android:textSize="18sp"
        app:typefaceAsset="@string/proximaNovaRegular" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:scaleType="center"
        android:tint="@color/bottom_nav_view_item_color"
        app:srcCompat="@drawable/ic_setting_arrow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:background="@color/bottom_nav_bar_color_light" />

</RelativeLayout>