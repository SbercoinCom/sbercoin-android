<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_progress_bar"
        android:orientation="vertical">

        <org.sbercoin.wallet.utils.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:maxLines="1"
            android:text="Restore Contracts"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:editTextTypeface="@string/proximaNovaSemibold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <org.sbercoin.wallet.utils.FontTextView
                android:id="@+id/tv_back_up_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 January 2017"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:typefaceAsset="@string/proximaNovaSemibold" />

            <org.sbercoin.wallet.utils.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back-up Date"
                android:textColor="@color/grey70"
                android:textSize="14sp"
                app:typefaceAsset="@string/proximaNovaRegular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/tv_back_up_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    app:typefaceAsset="@string/proximaNovaSemibold" />

                <org.sbercoin.wallet.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Back-up App\nVersion"
                    android:textColor="@color/grey70"
                    android:textSize="12sp"
                    app:typefaceAsset="@string/proximaNovaRegular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/tv_contracts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    app:typefaceAsset="@string/proximaNovaSemibold" />

                <org.sbercoin.wallet.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contracts"
                    android:textColor="@color/grey70"
                    android:textSize="12sp"
                    app:typefaceAsset="@string/proximaNovaRegular" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/tv_tokens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    app:typefaceAsset="@string/proximaNovaSemibold" />

                <org.sbercoin.wallet.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tokens"
                    android:textColor="@color/grey70"
                    android:textSize="12sp"
                    app:typefaceAsset="@string/proximaNovaRegular" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/tv_templates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    app:typefaceAsset="@string/proximaNovaSemibold" />

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/fontTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Templates"
                    android:textColor="@color/grey70"
                    android:textSize="12sp"
                    app:typefaceAsset="@string/proximaNovaRegular" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <org.sbercoin.wallet.utils.FontButton
                android:id="@+id/bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_corner_background_light"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/button_text"
                app:typeface="@string/proximaNovaSemibold" />

            <org.sbercoin.wallet.utils.FontButton
                android:id="@+id/bt_restore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_sea_corner_background_light"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/restore"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text"
                app:typeface="@string/proximaNovaSemibold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>