<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/event_log_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_event_log_data"
            android:orientation="horizontal"
            android:padding="4dp">

            <org.sbercoin.wallet.utils.FontTextView
                android:id="@+id/tv_view_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hex"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:typefaceAsset="@string/simplonMonoRegular" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/ic_dark_dropdown" />

        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_dark_right" />

    </LinearLayout>

    <org.sbercoin.wallet.utils.FontTextView
        android:id="@+id/tv_log_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:typefaceAsset="@string/simplonMonoRegular" />

</LinearLayout>