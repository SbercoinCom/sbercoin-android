<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_progress_bar"
        android:orientation="vertical"
        android:padding="16dp">

        <org.sbercoin.wallet.utils.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/confirm_purchase"
            android:textSize="18sp"
            app:typefaceAsset="@string/proximaNovaSemibold" />

        <org.sbercoin.wallet.utils.FontTextView
            android:id="@+id/contract_name"
            style="@style/confirm_purchase_title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="savfsv"
            app:typefaceAsset="@string/proximaNovaRegular" />

        <org.sbercoin.wallet.utils.FontTextView
            style="@style/confirm_purchase_subtitle_dialog_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contract_name"
            app:typefaceAsset="@string/proximaNovaRegular" />

        <org.sbercoin.wallet.utils.FontTextView
            android:id="@+id/contract_type"
            style="@style/confirm_purchase_title_dialog"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typefaceAsset="@string/proximaNovaRegular" />

        <org.sbercoin.wallet.utils.FontTextView
            style="@style/confirm_purchase_subtitle_dialog_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contract_type"
            app:typefaceAsset="@string/proximaNovaRegular" />

        <org.sbercoin.wallet.utils.FontTextView
            android:id="@+id/miner_address"
            style="@style/confirm_purchase_title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="sd34nf439u4fn38uc34mc03xm3434092-ck330cc943cc03"
            app:typefaceAsset="@string/proximaNovaRegular" />

        <org.sbercoin.wallet.utils.FontTextView
            style="@style/confirm_purchase_subtitle_dialog_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/miner_address"
            app:typefaceAsset="@string/proximaNovaRegular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/price"
                    style="@style/confirm_purchase_subtitle_dialog_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:typefaceAsset="@string/proximaNovaBold" />


                <org.sbercoin.wallet.utils.FontTextView
                    style="@style/confirm_purchase_subtitle_dialog_light_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/price"
                    app:typefaceAsset="@string/proximaNovaRegular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <org.sbercoin.wallet.utils.FontTextView
                    android:id="@+id/fee"
                    style="@style/confirm_purchase_subtitle_dialog_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.100 SBER"
                    app:typefaceAsset="@string/proximaNovaBold" />

                <org.sbercoin.wallet.utils.FontTextView
                    style="@style/confirm_purchase_subtitle_dialog_light_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Fee"
                    app:typefaceAsset="@string/proximaNovaRegular" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <org.sbercoin.wallet.utils.FontButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_corner_background_light"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/grey70"
                android:textSize="16sp"
                app:typeface="@string/proximaNovaRegular" />

            <org.sbercoin.wallet.utils.FontButton
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_sea_corner_background_light"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:typeface="@string/proximaNovaRegular" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>